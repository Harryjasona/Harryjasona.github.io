{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Harryjasona/Harryjasona.github.io/main/Project/Gilts%20Sensitivity%20Model%20.csv", "format":{"type": "csv"}
  },
  "repeat": {
    "layer": ["4% Coupon Rate", "1% Coupon Rate", "High Yield (8%) No Principal","High Principal (2000) Low Yield (1%)"]
  },
  "title":{
    "text":"Displaying Debt Instruments Sensitivity To Duration",
    "subtitle":"Demonstrating how interest rate changes affect bonds of diffrent durations (high yield/coupon = low duration)"
  },
  "height": 300,
  "width": 300, 
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {
        "bin": true,
        "field": "Intrest Rate (1%)",
        "title":"Interest Rate (%)",
        "type": "quantitative"
      },
      "y": {
        "aggregate": "mean",
        "field": {"repeat": "layer"},
        "type": "quantitative",
        "title": "Indexed Value (Â£)"
      },
      "color": {
        "datum": {"repeat": "layer"},
        "type": "nominal"
      }
    }
  }
}
