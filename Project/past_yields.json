{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Harryjasona/Harryjasona.github.io/main/Project/monthly%20average%20gilt%20yields.json"
  },
  "repeat": {
    "layer": [
      "5 Year", "10 Year", "30 Year"
    ]
  },
  "title": {
    "text": "Historical Average Daily Conventional Gilt Yields",
    "subtitle": "calculated at benchmark maturities on a monthly basis since April 1998, Source: DMO.gov.uk"
  },
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {"field": "Month", "title": "Intrest Rate (%)", "type": "temporal", "aggregate": {"argmax": "Month"}},
      "y": {
        "aggregate": "mean",
        "field": {"repeat": "layer"},
        "type": "quantitative",
        "title": "Indexed Value (Â£)"
      },
      "color": {"datum": {"repeat": "layer"}, "type": "nominal"},
      "tooltip": {"field": {"repeat": "layer"}}
    }
  }
}
