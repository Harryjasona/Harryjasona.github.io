    {
      "mark": "line",
      "encoding": {
        "x": {"field": "Month", "type": "temporal","scale": {"domain": {"param": "brush"}}},
        "y": {
          "field": "Interest Rate Absoutle",
          "type": "quantitative",
          "axis": {"orient": "right"}
        },
        "color": {"datum": "Interest Rate Absoutle", "type": "nominal"}
      }
    }
  ]
  }
